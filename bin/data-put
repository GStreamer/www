#!/bin/sh
if ! test -d data
then
  echo "Please run this from the www/ module dir"
  exit 1
fi

chmod -R g+w data 2> /dev/null
rsync -arv -e ssh $@ data freedesktop.org:/srv/gstreamer.freedesktop.org/www

echo "if you want to sync packages (only if you maintain them !), do"
echo rsync -arv -e ssh --delete data/pkg pdx.freedesktop.org:/home/projects/gstreamer/www/data
